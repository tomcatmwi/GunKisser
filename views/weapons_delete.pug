include edit_form_inputs
block edit_form_inputs

block body
    div.container.noselect
      div.page-header
        h1 Fegyver törlése
      div
      
        div.panel.panel-default
          div.panel-body
            p.lead Biztosan törölni akarod ezt a fegyvert?
            
            p
              table.table.table-striped.table-responsive
                +row('Név', data.name)
                +row('Gyártási szám', data.serialno)
                +row('Kaliberjel', data.name)
                +row('Kategória', data.category)
                +row('Gyártási év', data.year)
                +row('Leírás', data.description)
                +row('Azonosító', data._id, 'id')
            
        div.alert.alert-danger#error

        div.panel.panel-default
          div.panel-body.formsubmit
            div.row
              div.col-xs-12.col-sm-12.col-md-6.col-lg-6
                button#btnDelete.btn.btn-default Igen, törlöm
              div.col-xs-12.col-sm-12.col-md-6.col-lg-6
                button#btnCancel.btn.btn-default Nem, mégsem
            
