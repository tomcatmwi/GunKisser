block body
    div.container.noselect
      div.page-header
        h1 #{pagetitle}
      div
      
        form.form-horizontal#form
        
          input(type='hidden', value=data._id).form-control#id
          
          div.panel.panel-default
            div.panel-heading Jelleg
            div.panel-body
              +textinput('A jelleg neve', 'name', '', data.name)
          
