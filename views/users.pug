include header
block header

include mainmenu
block mainmenu

block body
    div.container
      div.page-header#controls

        ul.nav.nav-tabs
          li(linked='panel_search' role='presentation').active
            a Keresés
          li(linked='panel_sort' role='presentation')
            a Rendezés
          li(linked='panel_operations' role='presentation')
            a Műveletek

        div#panel_search.panel.panel-default.panel-control
          div.panel-body
            form.form-inline
              div.form-group
                input#search(type='search', placeholder='Keresés').form-control
              div.form-group
                select#searchfield.form-control
                  option(value='*') Bármelyik mező
                  option(value='name') Ügyfél neve
                  option(value='city') Település
                  option(value='street') Utcanév
                  option(value='email') E-mail
                  option(value='skype') Skype név
                  option(value='username') Felhasználónév
                  option(value='remarks') Megjegyzések
              div.form-group
                select#searchmode.form-control
                  option(value='0') Legyen benne
                  option(value='1') Ezzel kezdődjön
                  option(value='2') Teljes kifejezés
              div.form-group
                button#searchBtn.btn.btn-default Keresés
  
        div#panel_sort.panel.panel-default.panel-control
          div.panel-body
            form.form-inline
              div.form-group
                select#sortby.form-control
                  option(value=0) Név szerint
                  option(value=1) Név szerint, magánszemélyek és jogi személyek külön
                  option(value=2) Regisztráció dátuma szerint
                  option(value=3) E-mail cím szerint
                  option(value=4) Skype-név szerint
              div.form-group
                select#sortmode.form-control
                  option(value=1) Emelkedő sorrendben
                  option(value=-1) Csökkenő sorrendben
              div.form-group
                button#sortBtn.btn.btn-default Rendezés

        div#panel_operations.panel.panel-default.panel-control
          div.panel-body
            form.form-inline
              div.form-group
                button.btn.btn-default#newUserBtn Új felhasználó
                button#searchClearBtn.btn.btn-default Szűrés megszüntetése
                button#deleteSelected.btn.btn-default Kijelöltek törlése
              
        div#error.alert.alert-danger

        select#paginator.form-control
        
        table#datatable.table.table-striped.table-sm.table-responsive.table-hover
          thead
            tr
              th.table-control
                input(type='checkbox', id='selectAll', onClick='selectAll();')
              th Név
              th.tablecol-600 Telefon
              th.tablecol-700 E-mail
              th.tablecol-700 Skype
              th
              th
              th
          tbody
            tr
              td.table-control
              td
              td.tablecol-600
                a
              td.tablecol-700
                a
              td.tablecol-700
              td.table-control
                a
                  span.glyphicon.glyphicon-info-sign
              td.table-control
                a
                  span.glyphicon.glyphicon-pencil
              td.table-control
                a
                  span.glyphicon.glyphicon-trash

          tfoot
            tr
              th Összesen
              th#totalrecords(colspan=8).table-total


include footer
block footer
  script(src='/javascript/pages/users.js')
